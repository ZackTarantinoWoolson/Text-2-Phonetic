{
    "name": "Phonetic Translator",
    "version": "1.0.0",
    "description": "Translate text to NATO Phonetics",
    "manifest_version": 3,
    "author": "Zachary Tarantino-Woolson",
    "action": {
        "default_popup": "translator.html",
        "default_title": "Phonetic Translator"
    },
    "content_scripts": [
        {
            "js": [
                "nato_translate.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "icons":{
        "128":"assets/128.png",
        "48":"assets/48.png",
        "16":"assets/16.png"
    }
}